<!DOCTYPE html>
<html lang="en">
  <body>
    <%- include('partials/header.ejs') %>
    <div class="ToDoContainer">
      <h2 id="workTitle">Work List</h2>
      <div class="newToDo">
        <% if(locals.newToDoEntry) { %>
        <div>
          <% newToDoEntry.forEach(element => { %>
          <p class="userItem">
            <input type="checkbox" />
            <label><%= element %></label>
          </p>
          <% }) %>
        </div>
        <% } %>
        <form action="/newWorkEntry" method="POST">
          <input type="text" name="todo" id="todo" placeholder="ToDo" />
          <button>+</button>
        </form>
      </div>
      <%- include('partials/footer.ejs') %>
    </div>
  </body>
</html>
