<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="main.css"> <!--line 10 in index.js makes it point to our public directory by default -->
    <title>ToDoList!</title>
  </head>
  <body>
    <div class="ToDoContainer">
        <%- include('partials/date.ejs') %>
        <div class="newToDo">
            <% if(locals.newToDoEntry) { %>
            <div>
                <% newToDoEntry.forEach(element => { %>
                    <p class="userItem">
                        <input type="checkbox">
                        <label><%= element %></label>
                    </p>
                <% }) %>
            </div>
            <% } %>
            <form action="/newEntry" method="POST">
                <input type="text" name="todo" id="todo" placeholder='ToDo'/>
                <button>+</button>
            </form>
        </div>

    </div>
  </body>
</html>
